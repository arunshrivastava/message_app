<!DOCTYPE html>
<html>
  <head>
    <title>Bootstraps</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <nav class="navbar navbar-expand-sm bg-light">
        <div class="navbar navbar-default">
          <div class="container">
             <div class="navbar-header">
               <%= link_to "Message Board", root_path, class: "navbar-brand"  %>
              </div>
              <ul class="navbar-nav ">
                  <li class="nav-item mt-2" ><%= link_to "Sign Up", new_user_registration_path  %></li>
                  <% if user_signed_in? %>
                  <li class="nav-item mt-2"><%= link_to "Sign Out", destroy_user_session_path, method: :delete , class: "ml-2"%></li>
                  <% else %>
                  <li class="nav-item "><%= link_to "Log In", new_user_session_path, class: "ml-2" %></li>
                  <% end %>
              
              <% if user_signed_in? %>
               <li style="margin-left: 600px; margin-bottom:1px;"><%= link_to "New Message", new_message_path, class: "navbar-right navbar-text navbar-link" %></li>
              <% end %>
            </ul>
            </div>
          </div>           
        </nav>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
<div class="container">
       <%= yield %>  
</div>

  </body>
</html>
